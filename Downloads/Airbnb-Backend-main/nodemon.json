{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": [
    "src/**/*.test.ts", 
    "src/**/*.spec.ts", 
    "dist/**/*",
    "node_modules/**/*",
    "**/.git/**/*"
  ],
  "exec": "ts-node src/server.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 2500,
  "verbose": false,
  "restartable": "rs",
  "legacyWatch": true,
  "polling": false
}
