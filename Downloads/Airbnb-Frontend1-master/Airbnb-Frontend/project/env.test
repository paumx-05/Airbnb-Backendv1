# Environment variables for testing
# Copy this file to .env.local and update the values

# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000

# Test User Credentials
TEST_ADMIN_EMAIL=admin@airbnb.com
TEST_ADMIN_PASSWORD=Admin1234!

TEST_USER_EMAIL=ana1@gmail.com
TEST_USER_PASSWORD=123456789

TEST_NEW_USER_EMAIL=testuser@example.com
TEST_NEW_USER_PASSWORD=TestPass123

# Test Configuration
NODE_ENV=test
NEXT_PUBLIC_TEST_MODE=true

# Database Configuration (if needed for testing)
# DATABASE_URL=postgresql://username:password@localhost:5432/airbnb_test

# Email Configuration (for testing email features)
# SMTP_HOST=localhost
# SMTP_PORT=1025
# SMTP_USER=test
# SMTP_PASS=test

# JWT Configuration
JWT_SECRET=test-secret-key-for-testing-only
JWT_EXPIRES_IN=24h

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
